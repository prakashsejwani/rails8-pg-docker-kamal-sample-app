<div id="<%= dom_id post %>">
  <% if post.image.attached? %>
    <p>
      <%= image_tag post.image.variant(:thumb_medium), width: 200, height: 150 %>
    </p>
  <% end %>
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>
</div>
